{
	"name": "project-name",
	"title": "Project Title",
	"description": "A Bedstack application",
	"type": "module",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"dev": "bun run --watch src/index.ts",
		"build": "bun build src/index.ts --outdir dist --target=bun --sourcemap",
		"preview": "bun run dist/index.js",
		"fix": "biome check --write",
		"check": "biome check",
		"check:errors": "biome check --diagnostic-level=error",
		"typecheck": "tsc --noEmit",
		"clean": "rimraf node_modules",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:studio": "drizzle-kit studio",
		"db:seed": "bun run drizzle/seed.ts",
		"db:reset": "bun run drizzle/reset.ts"
	},
	"dependencies": {
		"@elysiajs/swagger": "^1.3.0",
		"@yolk-oss/elysia-env": "^3.0.0",
		"drizzle-orm": "^0.44.2",
		"elysia": "^1.3.5"
	},
	"devDependencies": {
		"@biomejs/biome": "2.0.5",
		"@types/bun": "^1.2.17",
		"better-sqlite3": "^12.0.0",
		"chalk": "^5.4.1",
		"drizzle-kit": "^0.31.2",
		"drizzle-seed": "^0.3.1",
		"rimraf": "^6.0.1",
		"typescript": "^5.8.3"
	},
	"module": "src/index.js",
	"trustedDependencies": [
		"@biomejs/biome"
	]
}
